<%- include('header') %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agendar Cita Médica</title>
    <link rel="stylesheet" href="/css/citas.css">
    <link rel="stylesheet" href="/css/doctores.css">
</head>
<body>

    <div class="container">
        <h1>Agendar Cita Médica</h1>
        <form action="/citas/<%= paciente ? paciente.id : '' %>" method="POST"> <div class="form-group">
            <input type="hidden" id="pacienteId" name="pacienteId" value="<%= paciente ? paciente.id : '' %>">

            <div class="form-group">
                <label for="">Paciente: <%= paciente ? paciente.Nombre + ' ' + paciente.Apellido : '' %></label>
                
            </div>

            <div class="form-group">
                <label for="especialidadId">Especialidad:</label>
                <select name="especialidadId" id="especialidadId" required>
                    <option value="" disabled selected>Seleccione especialidad</option>
                    <% especialidades.forEach(function(e) { 
                        if (e.Descripcion !== 'No Aplicable' && e.Descripcion !== 'No Aplica') { %>
                        <option value="<%= e.Id %>"><%= e.Descripcion %></option>
                    <% } 
                    }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="personalId">Médico de Preferencia:</label>
                <select name="personalId" id="personalId" required disabled>
                    <option value="" disabled selected>Seleccione doctor</option>
                </select>
            </div>

            <div class="form-group">
                <label for="fecha">Fecha y hora Deseada para la Cita:</label>
                <input type="datetime-local" id="fecha" name="fecha" required min="2025-05-29"> </div>

            <div class="form-group">
                <label for="observaciones">Motivo de la Consulta:</label>
                <textarea id="observaciones" name="observaciones" rows="4" placeholder="Describa brevemente el motivo de su cita" required></textarea>
            </div>

            </div>
            <input type="submit" value="Solicitar Cita">

        </form>
    </div>
    <script>
document.getElementById('especialidadId').addEventListener('change', function() {
    const especialidadId = this.value;
    const personalSelect = document.getElementById('personalId');
    personalSelect.innerHTML = '<option value="" disabled selected>Cargando...</option>';
    personalSelect.disabled = true;
    fetch(`/doctores-por-especialidad/${especialidadId}`)
        .then(res => res.json())
        .then(doctores => {
            personalSelect.innerHTML = '<option value="" disabled selected>Seleccione doctor</option>';
            doctores.forEach(d => {
                personalSelect.innerHTML += `<option value="${d.Id}">${d.Nombres} ${d.Apellidos}</option>`;
            });
            personalSelect.disabled = false;
        })
        .catch(() => {
            personalSelect.innerHTML = '<option value="" disabled selected>Error al cargar</option>';
        });
});
    </script>
</body>
</html>