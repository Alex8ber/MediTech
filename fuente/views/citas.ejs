<%- include('header') %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agendar Cita Médica</title>
    <link rel="stylesheet" href="/css/citas.css">
    <link rel="stylesheet" href="/css/doctores.css">
</head>
<body>

    <div class="container">
        <h1>Agendar Cita Médica</h1>
        <form action="#" method="POST"> <div class="form-group">
            <div class="form-group">
                <label for="paciente">Paciente registrado:</label>
                <select id="paciente" name="pacienteId" required>
                    <option value="">Seleccione un paciente</option>
                    <% pacientes.forEach(function(p) { %>
                        <option value="<%= p.Id %>">
                            <%= p.Nombre %> <%= p.Apellido %> - <%= p.Edad %> Años - C.I: <%= p.Cedula %>
                            <% if(p.FechaNacimiento){ %> - Nac: <%= p.FechaNacimiento.toISOString ? p.FechaNacimiento.toISOString().slice(0,10) : p.FechaNacimiento %> <% } %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="especialidad">Especialidad Médica:</label>
                <select id="especialidad" name="especialidad" required>
                    <option value="">Seleccione una especialidad</option>
                    <% especialidades.forEach(function(es) { %>
                        <option value="<%= es.Id %>"><%= es.Descripcion %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="medico">Médico de Preferencia (opcional):</label>
                <select name="medico" id="medico" required>
                    <option value="">Seleccione doctor</option>
                    <% medicos.forEach(function(m) { %>
                        <option value="<%= m.Id %>"><%= m.Nombre %> - <%= m.Apellido %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="fecha_cita">Fecha Deseada para la Cita:</label>
                <input type="date" id="fecha_cita" name="fecha_cita" required min="2025-05-29"> </div>

            <div class="form-group">
                <label for="hora_cita">Hora Aproximada Deseada:</label>
                <input type="time" id="hora_cita" name="hora_cita">
                <small>Nota: La hora exacta será confirmada posteriormente.</small>
            </div>

            <div class="form-group">
                <label for="motivo_cita">Motivo de la Consulta:</label>
                <textarea id="motivo_cita" name="motivo_cita" rows="4" placeholder="Describa brevemente el motivo de su cita" required></textarea>
            </div>

            <div class="form-group">
                <label for="patologia">Patología:</label>
                <select id="patologia" name="patologia" required>
                    <option value="">Seleccione una patología</option>
                    <% patologias.forEach(function(p) { %>
                        <option value="<%= p.Id %>"><%= p.Nombre %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="estado">Estado Actual:</label>
                <select id="estado" name="estadoId" required>
                    <option value="">Seleccione un estado</option>
                    <% estados.forEach(function(e) { %>
                        <option value="<%= e.Id %>"><%= e.Descripcion %></option>
                    <% }) %>
                </select>
            </div>
            <input type="submit" value="Solicitar Cita">

        </form>
    </div>
    <script>
        
    </script>
</body>
</html>