<%- include('../header') %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctores</title>
    <link rel="stylesheet" href="/css/estilos2.css">

</head>
<body>
    <main>
        <div class="titulo">Doctor</div>

        <div class="busqueda">
            <div>
                <label for="buscar">Buscar Doctor</label>
                <input type="text" id="buscar" placeholder="Nombre, Cédula, Especialidad...">
            </div>
        </div>

        <div class="tabla-section">
            <div class="tabla-titulo">Doctores registrados</div>
            <table>
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Cédula</th>
                        <th>Edad</th>
                        <th>Especialidad</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody id="tabla-doctores">
                    <% doctores.forEach(doctor => { %>
                        <tr>
                            <td><%= doctor.Nombre %></td>
                            <td><%= doctor.Apellido %></td>
                            <td><%= doctor.Cedula %></td>
                            <td><%= doctor.Edad %></td>
                            <td><%= doctor.Especialidad %></td>
                            <td><%= doctor.Email %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <button class="nuevo-doctor" style="margin-left:20px;">Nuevo Doctor</button>
            <button class="eliminar-doctor" style="margin-left:20px;">Eliminar Doctor</button>
            <button class="editar-doctor" style="margin-left:20px;">Editar Doctor</button>
        </div>
    </main>
<script>
document.getElementById('buscar').addEventListener('input', function() {
    const filtro = this.value;
    fetch(`/buscar-doctores?q=${encodeURIComponent(filtro)}`)
        .then(res => res.json())
        .then(data => {
            const tbody = document.getElementById('tabla-doctores');
            tbody.innerHTML = '';
            data.forEach(doctor => {
                const fila = document.createElement('tr');
                fila.innerHTML = `
                    <td>${doctor.Nombre}</td>
                    <td>${doctor.Apellido}</td>
                    <td>${doctor.Cedula}</td>
                    <td>${doctor.Edad}</td>
                    <td>${doctor.Especialidad}</td>
                    <td>${doctor.Email}</td>
                `;
                tbody.appendChild(fila);
            });
        });
});
</script>
</body>
</html>
